<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#636363">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/white_bubble"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/guy"/>

        <TextView
            android:id="@+id/name"
            android:paddingTop="@dimen/_20sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_toRightOf="@id/profile_picture"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Thomas"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_60sdp"
            android:paddingTop="@dimen/_20sdp"
            android:layout_toRightOf="@id/name"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="20"/>

        <TextView
            android:id="@+id/major"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/grey_bubble"
            android:layout_toRightOf="@id/profile_picture"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_below="@id/name"
            android:text="Computer Science"/>

        <TextView
            android:id="@+id/minor"
            android:layout_below="@id/major"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/grey_bubble"
            android:layout_toRightOf="@id/profile_picture"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:text="Mathematics"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/white_bubble">

        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:text="Strangers call me Thomas. My boss calls me a developer. My friends call me goofy, but you can call me your study partner. On a journey to find me."
            />

        <TextView
            android:id="@+id/organizations_title"
            android:layout_below="@id/bio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Organizations"/>
        <TextView
            android:id="@+id/classes_title"
            android:layout_below="@id/organizations_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Classes"/>

        <TextView
            android:id="@+id/hobbies_title"
            android:layout_below="@id/classes_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Hobbies"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout2"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/white_bubble">


        <ImageButton
            android:id="@+id/edit_profile"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_baseline_person_outline_24"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toRightOf="@id/edit_profile"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_baseline_home_24"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/messages"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toRightOf="@id/home"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_baseline_message_24"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/settings"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toRightOf="@id/messages"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_baseline_settings_24"
            android:background="@color/white"/>
    </RelativeLayout>


</RelativeLayout>